    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".skin_tab">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/skin"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/face"
                style="@style/cat_textview"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:rotation="270"
                android:text="Face"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/hair"
                app:layout_constraintEnd_toEndOf="@+id/hair"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/hair" />

            <RadioButton
                android:id="@+id/body"
                style="@style/cat_textview"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:rotation="270"
                android:text="Body"
                android:textColor="@drawable/cat_textview_selector"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/face"
                app:layout_constraintEnd_toEndOf="@+id/face"
                app:layout_constraintStart_toStartOf="@+id/face" />


            <RadioButton
                android:id="@+id/hair"
                style="@style/cat_textview"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:rotation="270"
                android:text="Hair"
                android:textColor="@drawable/cat_textview_selector"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/search"
                app:layout_constraintEnd_toEndOf="@+id/search"
                app:layout_constraintStart_toStartOf="@+id/search" />

            <RadioButton
                android:id="@+id/skin"
                style="@style/cat_textview"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:rotation="270"
                android:text="Skin"
                android:textColor="@drawable/cat_textview_selector"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/body"
                app:layout_constraintEnd_toEndOf="@+id/body"
                app:layout_constraintStart_toStartOf="@+id/body" />
        </RadioGroup>

